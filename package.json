{
  "name": "baruch-design",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:next": "next dev",
    "prebuild": "npm run build-storybook",
    "build:next": "next build",
    "build-storybook": "rm -rf public/storybook && storybook build -o storybook-static && mv storybook-static public/storybook",
    "build": "npm run prebuild && npm run build:next",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "dev": "concurrently \"npm run dev:next\" \"npm run storybook\""
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@storybook/nextjs": "^8.6.12",
    "clsx": "^2.1.1",
    "flowbite-react": "^0.10.2",
    "motion": "^12.8.0",
    "next": "15.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/experimental-nextjs-vite": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-plugin-storybook": "^0.12.0",
    "playwright": "^1.52.0",
    "storybook": "^8.6.12",
    "tailwindcss": "^4.1.4",
    "vitest": "^3.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
